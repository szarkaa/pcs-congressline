<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-13-create-optional-service" author="aszarka">

        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="optional_service"/>
            </not>
        </preConditions>

        <createTable tableName="optional_service">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)"/>

            <column name="start_date" type="DATE"/>
            <column name="end_date" type="DATE"/>

            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>

            <column name="max_person" type="INT(11)">
                <constraints nullable="false"/>
            </column>

            <column name="reserved" type="INT(11)"/>

            <column name="currency_id" type="BIGINT(20)"/>
            <column name="vat_info_id" type="BIGINT(20)"/>
            <column name="congress_id" type="BIGINT(20)"/>

            <column name="online_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="online_visibility" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="online_label" type="VARCHAR(200)"/>
            <column name="online_order" type="INT(11)"/>
        </createTable>

        <createIndex tableName="optional_service" indexName="idx_optional_service_currency_id">
            <column name="currency_id"/>
        </createIndex>

        <createIndex tableName="optional_service" indexName="idx_optional_service_vat_info_id">
            <column name="vat_info_id"/>
        </createIndex>

        <createIndex tableName="optional_service" indexName="idx_optional_service_congress_id">
            <column name="congress_id"/>
        </createIndex>

        <addForeignKeyConstraint constraintName="fk_optional_service_congress_id"
                                 baseTableName="optional_service"
                                 baseColumnNames="congress_id"
                                 referencedTableName="congress"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_optional_service_currency_id"
                                 baseTableName="optional_service"
                                 baseColumnNames="currency_id"
                                 referencedTableName="currency"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_optional_service_vat_info_id"
                                 baseTableName="optional_service"
                                 baseColumnNames="vat_info_id"
                                 referencedTableName="vat_info"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>
