<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-13-create-online-reg-discount-code" author="aszarka">

        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="online_reg_discount_code"/>
            </not>
        </preConditions>

        <createTable tableName="online_reg_discount_code">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="code" type="VARCHAR(32)"/>
            <column name="discount_type" type="VARCHAR(32)"/>

            <column name="discount_percentage" type="INT(11)">
                <constraints nullable="false"/>
            </column>

            <column name="congress_id" type="BIGINT(20)"/>
        </createTable>

        <createIndex tableName="online_reg_discount_code" indexName="idx_online_reg_discount_code_congress_id">
            <column name="congress_id"/>
        </createIndex>

        <addForeignKeyConstraint constraintName="fk_online_reg_discount_code_congress_id"
                                 baseTableName="online_reg_discount_code"
                                 baseColumnNames="congress_id"
                                 referencedTableName="congress"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>
