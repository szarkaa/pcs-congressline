<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-13-create-jhi_user_congress" author="aszarka">

        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="jhi_user_congress"/>
            </not>
        </preConditions>

        <createTable tableName="jhi_user_congress">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="congress_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="user_id, congress_id" tableName="jhi_user_congress"/>

        <addUniqueConstraint columnNames="meeting_code" constraintName="UC_CONGRESSMEETING_CODE_COL" tableName="congress"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="jhi_user_congress"
                                 constraintName="fk_jhi_user_congress_jhi_user_user_id"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="congress_id"
                                 baseTableName="jhi_user_congress"
                                 constraintName="fk_jhi_user_congress_congress_congress_id"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 referencedColumnNames="id"
                                 referencedTableName="congress"/>
    </changeSet>
</databaseChangeLog>
