<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-13-create-online-registration-custom-answer" author="aszarka">

        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="online_registration_custom_answer"/>
            </not>
        </preConditions>

        <createTable tableName="online_registration_custom_answer">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="answer" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>

            <column name="registration_id" type="BIGINT(20)"/>
            <column name="online_registration_id" type="BIGINT(20)"/>

            <column name="question_id" type="BIGINT(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_date" type="DATE"/>
        </createTable>

        <createIndex tableName="online_registration_custom_answer" indexName="idx_online_registration_custom_answer_question_id">
            <column name="question_id"/>
        </createIndex>

        <addForeignKeyConstraint constraintName="fk_online_registration_custom_answer_question_id"
                                 baseTableName="online_registration_custom_answer"
                                 baseColumnNames="question_id"
                                 referencedTableName="online_reg_custom_question"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>
