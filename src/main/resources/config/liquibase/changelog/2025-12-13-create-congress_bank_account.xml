<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-13-create-congress-bank-account" author="aszarka">

        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="congress_bank_account"/>
            </not>
        </preConditions>

        <createTable tableName="congress_bank_account">
            <column name="bank_accounts_id" type="BIGINT(20)">
                <constraints nullable="false"/>
            </column>

            <column name="congresses_id" type="BIGINT(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="congress_bank_account" columnNames="congresses_id,bank_accounts_id" constraintName="pk_congress_bank_account"/>

        <createIndex tableName="congress_bank_account" indexName="fk_congress_bank_account_bank_accounts_id">
            <column name="bank_accounts_id"/>
        </createIndex>

        <addForeignKeyConstraint constraintName="fk_congress_bank_account_bank_accounts_id"
                                 baseTableName="congress_bank_account"
                                 baseColumnNames="bank_accounts_id"
                                 referencedTableName="bank_account"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_congress_bank_account_congresses_id"
                                 baseTableName="congress_bank_account"
                                 baseColumnNames="congresses_id"
                                 referencedTableName="congress"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>
