<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-13-create-group-discount-payment" author="aszarka">

        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="group_discount_payment"/>
            </not>
        </preConditions>

        <createTable tableName="group_discount_payment">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="payment_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="date_of_payment" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>

            <column name="currency_id" type="BIGINT(20)"/>
            <column name="congress_id" type="BIGINT(20)"/>
            <column name="paying_group_id" type="BIGINT(20)"/>
        </createTable>

        <createIndex tableName="group_discount_payment" indexName="idx_group_discount_payment_paying_group_id">
            <column name="paying_group_id"/>
        </createIndex>

        <createIndex tableName="group_discount_payment" indexName="idx_group_discount_payment_currency_id">
            <column name="currency_id"/>
        </createIndex>

        <createIndex tableName="group_discount_payment"
                     indexName="fk_group_discount_payment_congress_id">
            <column name="congress_id"/>
        </createIndex>

        <addForeignKeyConstraint constraintName="fk_group_discount_payment_paying_group_id"
                                 baseTableName="group_discount_payment"
                                 baseColumnNames="paying_group_id"
                                 referencedTableName="paying_group"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_group_discount_payment_congress_id"
                                 baseTableName="group_discount_payment"
                                 baseColumnNames="congress_id"
                                 referencedTableName="congress"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_group_discount_payment_currency_id"
                                 baseTableName="group_discount_payment"
                                 baseColumnNames="currency_id"
                                 referencedTableName="currency"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>
