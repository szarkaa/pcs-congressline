<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-13-create-paying-group" author="aszarka">

        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="paying_group"/>
            </not>
        </preConditions>

        <createTable tableName="paying_group">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="zip_code" type="VARCHAR(32)"/>
            <column name="city" type="VARCHAR(64)"/>
            <column name="street" type="VARCHAR(128)"/>
            <column name="contact_name" type="VARCHAR(128)"/>
            <column name="email" type="VARCHAR(64)"/>
            <column name="phone" type="VARCHAR(64)"/>
            <column name="fax" type="VARCHAR(64)"/>

            <column name="country_id" type="BIGINT(20)"/>
            <column name="currency_id" type="BIGINT(20)"/>
            <column name="congress_id" type="BIGINT(20)"/>

            <column name="tax_number" type="VARCHAR(64)"/>
        </createTable>

        <createIndex tableName="paying_group" indexName="idx_paying_group_country_id">
            <column name="country_id"/>
        </createIndex>

        <createIndex tableName="paying_group" indexName="idx_paying_group_currency_id">
            <column name="currency_id"/>
        </createIndex>

        <createIndex tableName="paying_group" indexName="idx_paying_group_congress_id">
            <column name="congress_id"/>
        </createIndex>

        <addForeignKeyConstraint constraintName="fk_paying_group_congress_id"
                                 baseTableName="paying_group"
                                 baseColumnNames="congress_id"
                                 referencedTableName="congress"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_paying_group_country_id"
                                 baseTableName="paying_group"
                                 baseColumnNames="country_id"
                                 referencedTableName="country"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_paying_group_currency_id"
                                 baseTableName="paying_group"
                                 baseColumnNames="currency_id"
                                 referencedTableName="currency"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>
