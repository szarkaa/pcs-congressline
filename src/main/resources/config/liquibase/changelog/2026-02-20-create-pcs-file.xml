<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2026-02-20-create-pcs-file" author="aszarka">

        <createTable tableName="pcs_file">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="file_content_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="file" type="longblob">
                <constraints nullable="false"/>
            </column>

            <column name="online_registration_id" type="BIGINT(20)">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>
</databaseChangeLog>
