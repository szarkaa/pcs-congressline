<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-13-create-rate" author="aszarka">

        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="rate"/>
            </not>
        </preConditions>

        <createTable tableName="rate">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="valid" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="currency_id" type="BIGINT(20)"/>

            <column name="rate" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="rate" indexName="idx_rate_currency_id">
            <column name="currency_id"/>
        </createIndex>

        <addForeignKeyConstraint constraintName="fk_rate_currency_id"
                                 baseTableName="rate"
                                 baseColumnNames="currency_id"
                                 referencedTableName="currency"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>
