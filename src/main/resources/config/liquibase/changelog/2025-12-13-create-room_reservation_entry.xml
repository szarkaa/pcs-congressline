<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-13-create-room-reservation-entry" author="aszarka">

        <preConditions onFail="MARK_RAN" onError="MARK_RAN">
            <not>
                <tableExists tableName="room_reservation_entry"/>
            </not>
        </preConditions>

        <createTable tableName="room_reservation_entry">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="reservation_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="reserved" type="INT(11)"/>

            <column name="room_id" type="BIGINT(20)"/>
        </createTable>

        <createIndex tableName="room_reservation_entry" indexName="idx_room_reservation_entry_room_id">
            <column name="room_id"/>
        </createIndex>

        <addForeignKeyConstraint constraintName="fk_room_reservation_entry_room_id"
                                 baseTableName="room_reservation_entry"
                                 baseColumnNames="room_id"
                                 referencedTableName="room"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>
