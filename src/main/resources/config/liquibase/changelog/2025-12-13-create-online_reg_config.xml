            <column name="reg_type_second_fee_label_es" type="VARCHAR(100)"/>
            <column name="reg_type_third_fee_label_es" type="VARCHAR(100)"/>
            <column name="reg_type_extra_title_es" type="VARCHAR(255)"/>
            <column name="optional_service_extra_title_es" type="VARCHAR(255)"/>
            <column name="personal_data_remark_es" type="TEXT"/>
            <column name="reg_type_remark_es" type="TEXT"/>
            <column name="room_remark_es" type="TEXT"/>
            <column name="optional_service_remark_es" type="TEXT"/>
            <column name="billing_remark_es" type="TEXT"/>
            <column name="bank_transfer_info_es" type="TEXT"/>
            <column name="terms_and_conditions_remark_es" type="TEXT"/>
            <column name="gdpr_remark_es" type="TEXT"/>
            <column name="marketing_remark_es" type="TEXT"/>
            <column name="conditions_and_granting_remark_es" type="TEXT"/>

            <column name="browser_remark_pt" type="TEXT"/>
            <column name="position_label_pt" type="TEXT"/>
            <column name="other_data_label_pt" type="VARCHAR(200)"/>
            <column name="reg_type_first_fee_label_pt" type="VARCHAR(100)"/>
            <column name="reg_type_second_fee_label_pt" type="VARCHAR(100)"/>
            <column name="reg_type_third_fee_label_pt" type="VARCHAR(100)"/>
            <column name="reg_type_extra_title_pt" type="VARCHAR(255)"/>
