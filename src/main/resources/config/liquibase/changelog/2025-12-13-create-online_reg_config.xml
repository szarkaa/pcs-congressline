            <column name="optional_service_remark_hu" type="TEXT"/>

            <column name="other_data_label_en" type="VARCHAR(200)"/>
            <column name="other_data_label_hu" type="VARCHAR(200)"/>

            <column name="personal_data_remark_en" type="TEXT"/>
            <column name="personal_data_remark_hu" type="TEXT"/>
            <column name="position_label_en" type="TEXT"/>
            <column name="position_label_hu" type="TEXT"/>

            <column name="reg_type_first_fee_label_en" type="VARCHAR(100)"/>
            <column name="reg_type_first_fee_label_hu" type="VARCHAR(100)"/>
            <column name="reg_type_remark_en" type="TEXT"/>
            <column name="reg_type_remark_hu" type="TEXT"/>
