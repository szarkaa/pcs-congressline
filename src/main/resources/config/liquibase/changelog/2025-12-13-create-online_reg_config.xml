        <createIndex tableName="online_reg_config" indexName="idx_online_reg_config_congress_id">
            <column name="congress_id"/>
        </createIndex>

        <createIndex tableName="online_reg_config" indexName="idx_online_reg_config_default_country_id">
            <column name="default_country_id"/>
        </createIndex>

        <addForeignKeyConstraint constraintName="fk_online_reg_config_country_id"
                                 baseTableName="online_reg_config"
                                 baseColumnNames="default_country_id"
                                 referencedTableName="country"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_online_reg_config_congress_id"
                                 baseTableName="online_reg_config"
                                 baseColumnNames="congress_id"
                                 referencedTableName="congress"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>
