            <column name="reg_type_third_fee_label_hu" type="VARCHAR(100)"/>

            <column name="room_remark_en" type="TEXT"/>
            <column name="room_remark_hu" type="TEXT"/>
            <column name="terms_and_conditions_remark_en" type="TEXT"/>
            <column name="terms_and_conditions_remark_hu" type="TEXT"/>

            <column name="workplace_required" type="BIT(1)"/>
            <column name="workplace_visible" type="BIT(1)"/>

            <column name="header_normal" type="MEDIUMBLOB"/>

            <column name="bank_transfer_info_en" type="TEXT"/>
            <column name="bank_transfer_info_hu" type="TEXT"/>
            <column name="bank_transfer_visible" type="BIT(1)"/>
            <column name="check_visible" type="BIT(1)"/>
            <column name="credit_card_visible" type="BIT(1)"/>

            <column name="conditions_and_granting_remark_en" type="TEXT"/>
            <column name="conditions_and_granting_remark_hu" type="TEXT"/>

            <column name="optional_service_extra_title_en" type="VARCHAR(255)"/>
            <column name="optional_service_extra_title_hu" type="VARCHAR(255)"/>
            <column name="reg_type_extra_title_en" type="VARCHAR(255)"/>
            <column name="reg_type_extra_title_hu" type="VARCHAR(255)"/>

            <column name="default_country_id" type="BIGINT(20)"/>

            <column name="no_payment_required" type="BIT(1)"/>
