            <column name="color_code" type="VARCHAR(16)"/>
            <column name="department_required" type="BIT(1)"/>
            <column name="department_visible" type="BIT(1)"/>
            <column name="email_required" type="BIT(1)"/>
            <column name="email_visible" type="BIT(1)"/>
            <column name="fax_required" type="BIT(1)"/>
            <column name="fax_visible" type="BIT(1)"/>
            <column name="first_name_required" type="BIT(1)"/>
            <column name="first_name_visible" type="BIT(1)"/>
            <column name="last_name_required" type="BIT(1)"/>
            <column name="last_name_visible" type="BIT(1)"/>
            <column name="phone_required" type="BIT(1)"/>
            <column name="phone_visible" type="BIT(1)"/>
            <column name="position_required" type="BIT(1)"/>
            <column name="position_visible" type="BIT(1)"/>
            <column name="roommate_required_visible" type="BIT(1)"/>
            <column name="special_booking_request_visible" type="BIT(1)"/>
            <column name="street_required" type="BIT(1)"/>
            <column name="street_visible" type="BIT(1)"/>
            <column name="title_required" type="BIT(1)"/>
            <column name="title_visible" type="BIT(1)"/>
            <column name="zip_code_required" type="BIT(1)"/>
            <column name="zip_code_visible" type="BIT(1)"/>

            <column name="congress_id" type="BIGINT(20)"/>
            <column name="country_required" type="BIT(1)"/>
            <column name="country_visible" type="BIT(1)"/>
            <column name="other_data_required" type="BIT(1)"/>
            <column name="other_data_visible" type="BIT(1)"/>

            <column name="header_normal_content_type" type="VARCHAR(255)"/>
            <column name="header_normal_name" type="VARCHAR(255)"/>

            <column name="billing_remark_en" type="TEXT"/>
            <column name="billing_remark_hu" type="TEXT"/>
